{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"module": "commonjs",
		"types": ["jest", "node", "@types/jest"],
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": [
		"jest.config.js",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
